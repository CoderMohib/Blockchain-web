---
import { CutCornerButton } from "../components/CutCornerButton";
---
    <header class="sticky top-0 bg-zinc-900/50 backdrop-blur-lg z-[1000]">
      <div class="container">
        <div class="flex justify-between items-center h-24 md:h-28">
          <div>
            <img src="/assets/images/logo.svg" alt="Blockforge logo" />
          </div>
          <div class="flex gap-4 items-center ">
            <CutCornerButton className="hidden md:inline-flex">Get Started</CutCornerButton>
            <div class="size-10 relative">
              <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
                <div class="w-5 h-0.5 bg-zinc-300 -translate-y-1"></div>
              </div>
              <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
                <div class="w-5 h-0.5 bg-zinc-300 translate-y-1"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

